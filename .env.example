# Temperature Monitor Configuration
# Copy this file to .env and customize for your environment

# Environment Configuration
ENVIRONMENT=development
RUNNING_IN_DOCKER=false
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=5000

# File Paths (optional - defaults will be used if not set)
# LOG_FILE_PATH=/path/to/temp_monitor.log
# LOGO_IMAGE_PATH=/path/to/My-img8bit-1com-Effect.gif
# FAVICON_PATH=/path/to/temp-favicon.ico

# Sensor Configuration
USE_MOCK_SENSORS=false
SAMPLING_INTERVAL=60.0
CPU_TEMP_FACTOR=2.0
TEMPERATURE_SAMPLES=3

# Logging Configuration
LOG_LEVEL=INFO
# For production JSON logging, use:
# LOG_LEVEL=INFO

# Security Configuration
# Generate a secure token: python -c "import secrets; print(secrets.token_hex(32))"
BEARER_TOKEN=your_secure_bearer_token_here
TOKEN_MIN_LENGTH=32

# API Configuration
ENABLE_CORS=false
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Example Production Configuration:
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=INFO
# USE_MOCK_SENSORS=true
# ENABLE_CORS=false
# RATE_LIMIT_PER_MINUTE=60
# BEARER_TOKEN=abcd1234567890abcd1234567890abcd1234567890abcd1234567890abcd1234

# Example Development Configuration:
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# USE_MOCK_SENSORS=true
# ENABLE_CORS=true
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
# RATE_LIMIT_PER_MINUTE=120
# BEARER_TOKEN=dev_token_12345678901234567890123456789012